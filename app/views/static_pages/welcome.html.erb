<div class="table-container p-4 bg-white">
  <% if user_signed_in?  %>
    <h2 class="text-center">Welcome <%= current_user.prefix %> <%= current_user.last_name %></h2>
    <%# link_to 'Register as Conference Participant Now', user_participation_path(current_user.id), class: "btn btn-gray" %>
    <% if current_user.admin? %>
      <%= link_to "Users List", users_path, class: "btn btn-gray btn-navs" %>
      <%= link_to "Abstracts List", abstracts_path, class: "btn btn-gray btn-navs" %>
    <% end %>
  <% else %>
      <%= link_to "Sign Up or Login ", root_path, class: "btn btn-gray btn-navs" %>
  <% end %>

  <%= link_to "Submit an Abstract", new_user_abstract_path(current_user), class: "btn btn-gray btn-navs" %>
</div>

