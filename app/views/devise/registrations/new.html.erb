<div class="d-flex justify-content-center">
  <div class="card flex-column shadow p-3 mb-5 bg-body rounded" style="width: 27rem;">
    <h2 class= "text-center">Sign up</h2>
    <div class="form-container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group mb-6">
          <%= f.label :prefix %><br />
          <%= f.select :prefix, User::TYPES, { }, { class: "form-select form-select-md mb-6" } %>
        </div>

        <div class="field form-group mb-6">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",
              class: "form-control" %>
        </div>

        <div class="field form-group mb-6">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",
              class: "form-control" %>
        </div>

        <div class="field form-group mb-6">
          <%= f.label :suffix %><br />
          <%= f.text_field :suffix, autofocus: true, autocomplete: "suffix",
              placeholder: "Jr., I, CBE etc", class: "form-control" %>
        </div>

        <div class="field form-group mb-6">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              placeholder: "example@example.com", class: "form-control" %>
        </div>

        <div class="field form-group mb-6">
          <span class="italic small">Password Requirements:
            <ul>
              <li class="italic small">Have at least 6 characters</li>
              <li class="italic small">Have at least one number: 0-9</li>
              <li class="italic small">Have at least one lowercase letter: a-z</li>
              <li class="italic small">Have at least one uppercase letter: A-Z</li>
              <li class="italic small">Have at least one uppercase letter: A-Z</li>
              <li class="italic small">Have at least one symbol: ?<>',?[]}{=-)(*&^%$#`~{}!</li>
            </ul>
          </span>
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "new-password",
              class: "form-control" %>
        </div>

        <div class="field form-group mb-6">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "form-control" %>
        </div>

        <div class="actions d-flex justify-content-center">
          <%= f.submit "Sign up", class: "btn btn-gray btn-margin btn-wide" %>
        </div>
      <% end %>
      <div class="actions d-flex justify-content-center" id="login">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>

